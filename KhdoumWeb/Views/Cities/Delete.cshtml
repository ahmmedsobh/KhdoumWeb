@model KhdoumWeb.Models.City

@{
    ViewData["Title"] = " حذف مدينة";
    Layout = "~/Views/Shared/DashBoardLayout.cshtml";
}

<h1>حذف مدينة</h1>

<h3>؟هل أنت متأكد من  عملية الحذف</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
