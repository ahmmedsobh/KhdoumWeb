@model KhdoumWeb.Models.City

@{
    ViewData["Title"] = "اضافة مدينة جديدة";
    Layout = "~/Views/Shared/DashBoardLayout.cshtml";
}

<h1>اضافة مدينة جديدة</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryService" class="control-label"></label>
                <input asp-for="DeliveryService" class="form-control" />
                <span asp-validation-for="DeliveryService" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GovernorateId" class="control-label"></label>
                <select asp-for="GovernorateId" class="form-control" asp-items="ViewBag.GovernorateId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="اضافة" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">الرجوع الى القائمة</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
