@model KhdoumWeb.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}

<style>
    input {
        border-radius: 0 !important;
        width: 100%;
    }
</style>

<div style="margin-top:100px">
    <h2 class="text-center">تسجيل الدخول</h2>
    <div class="row mt-2">
        <div class="col-md-4" style="margin:auto">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Phone" class="form-control" placeholder="البريد الالكترونى او رقم الهاتف" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="كلمة المرور" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="دخول" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>




