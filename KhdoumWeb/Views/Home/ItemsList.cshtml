@model IEnumerable<KhdoumWeb.Models.Item>
@{ 
    var ItemIdList = new List<int>();


}
   

<div id="tbl">
    <div style="margin-top:50px">
        @if (Model.Count() != 0)
        {
            <div class="row" id="list">

                @foreach (var item in Model)
                {
                    if (ItemIdList.IndexOf(item.Id) < 0)
                    {
                        string Id = $"btn{item.Id}";
                    <div class="col-lg-4">
                        <div class="card" style="margin-bottom:15px;">
                            @if (item.ImgUrl == "false")
                            {
                                <img style="height:200px" src="~/uploads/default.png" class="card-img-top" alt="@item.Title" title="@item.Title">
                            }
                            else
                            {
                                <img style="height:200px" src="~/uploads/Items/@item.ImgUrl" class="card-img-top" alt="@item.Title" title="@item.Title">
                            }
                            <div class="card-body">
                                <h5 class="card-title"><a target="_blank" asp-action="Item" asp-route-id="@item.ShortLink" class="nav-link Lnk">@item.Title</a></h5>
                                <h5 class="card-title">@item.Price ج.م</h5>
                                <p style="margin:0" class="card-text">
                                    @item.Date
                                    @*<a target="_blank" asp-action="Item" asp-route-id="@item.ShortLink" class="nav-link text-dark">
                                            @Html.Raw(item.Description.Substring(0, 85))
                                            <span>...</span>
                                        </a>*@
                                </p>
                                <p class="card-text">@item.City.Name</p>
                            </div>
                            <div class="card-footer bg-white">
                                <button onclick="AddToFavorite(@item.Id)" name="@item.Id" id="@Id" class="btn btn-dark"><i class="fas fa-heart text-white"></i></button>
                                @*<a href="#" id="ShareBtn" data-toggle="modal" data-target=".bd-example-modal-lg" class="btn btn-warning"><i id="ShareBtnIcon" class="fas fa-share-alt"></i></a>*@
                                <a class="btn btn-primary" href="tel:+2-010-646-416-08"><i class="fas fa-phone"></i></a>
                                <a class="btn btn-info" href="https://wa.me/201064641608?text= لـ @item.Title  (@item.ShortLink)"><i class="fab fa-whatsapp"></i></a>
                            </div>
                        </div>
                    </div>
                    }
                    ItemIdList.Add(item.Id);
                }
            </div>
        }
        else
        {
            <p class="alert alert-warning text-center" style="border-radius:0;width:100%">لم يتم العثور على اى عناصر</p>
        }

    </div>
</div>
